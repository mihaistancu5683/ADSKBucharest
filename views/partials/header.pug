.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-cube
        | ADSK Bucharest
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title == 'Home') ? 'active' : undefined)
          a(href='/') Home
        li(class=(title == 'Book fast parking') ? 'active' : undefined)
          a(href='/bookfp') Book fast parking
        li(class=(title == 'Book premium point') ? 'active' : undefined)
          a(href='/bookpp') Book premium point
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/auth/forge') Login
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profileImages.sizeX360
                img(src=user.profileImages.sizeX360, alt=(user.firstName || user.emailId))
              else
                img(src=user.gravatar(60), alt=(user.firstName || user.emailId))
              span= user.firstName || user.emailId
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/auth/logout') Logout
